    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <!-- <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.2/semantic.min.css" integrity="sha256-Z8Bv3UrxpRsWTfTPIjCojw5CdRNYSPw3TyxoU8WZSrM=" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.2/semantic.min.js" integrity="sha256-/P4bJXh+K+kZ7M5aKUKxAcvN8105oYfKkQ2cgwVZ8r4=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body> 
    <div>
        <div class="ui secondary pointing menu navbar">
                <a href="/" class="active item">Home</a> 
                <a href="/counties" class="item">Find Spots</a> 
                <a href="/faq" class="item">FAQ</a> 
                <a href="/about" class="item">About</a>
                <a href="/contact" class="item">Contact</a>
            <% if(isLoggedIn) { %>
                <div class="right menu">
                    <div class="ui item">
                        <a href="/users/profile"> <%= currentUser.name %></a>
                    </div>
                    <div class="ui item">
                        <a href='/users/profile/edit'>Settings</a>
                    </div>
                    <div class="ui item">
                        <a href="/users/logout">Log Out</a>
                    </div>
                </div>
            <% } else { %>
                <div class="right menu">
                    <div class="ui item">
                        <a href='/users/login'>Log In</a>
                    </div>
                    <div class="ui item">
                        <a href='/users/signup'>Sign Up</a>
                    </div>
                </div>
            <% } %>    
        </div>
        
        <div class="container">
            <%- body %> 
        </div>
    </div>
</body>
</html>